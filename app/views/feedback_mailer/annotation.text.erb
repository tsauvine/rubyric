<%= "#{@course.full_name} (#{@course_instance.name}) - #{@exercise.name}" %>

<% if !@exercise.anonymous_graders && @grader %><%=t :Reviewer %>: <%= @grader.firstname %> <%= @grader.lastname %> (<%= @grader.email %>)
<% end -%>
<% unless @review.grade.blank? %><%=t :Grade %>: <%= @review.grade %>
<% end -%>

<% if @review.feedback && !@review.feedback.strip.empty? -%>
<%= word_wrap(@review.feedback || '', :line_width => 76).html_safe %>
<% end -%>

<%=t :Feedback_available_at %>:
<%= @review_url %>
